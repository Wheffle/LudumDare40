    var move_left = keyboard_check(vk_left) or keyboard_check(ord('A'));
    var move_up = keyboard_check(vk_up) or keyboard_check(ord('W'));
    var move_down = keyboard_check(vk_down) or keyboard_check(ord('S'));
    
    var mx = 0;
    var my = 0;
    
    if (move_right) mx += 1;
    if (move_left) mx -= 1;
    if (move_up) my -= 1;
    if (move_down) my += 1;
    
    if (mx != 0 or my != 0)
